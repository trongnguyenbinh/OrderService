{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.EntityFrameworkCore": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log_.log",
                    "rollingInterval": "Day",
                    "fileSizeLimitBytes": 10485760,
                    "rollOnFileSizeLimit": true,
                    "shared": true,
                    "flushToDiskInterval": 1,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithEnvironmentUserName",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "LegacyOrder.API",
            "Environment": "Development"
        }
    },
    "AllowedHosts": "*",
    "Vault": {
        "Address": "https://vault.veasy.vn",
        "MountPoint": "secret",
        "SecretPath": "legacy-order-api"
    },
    "OpenAI": {
        "Model": "gpt-4o-mini",
        "ApiKey": "" 
    },
    "Chat": {
        "MaxMessagesPerSession": 10,
        "MaxMessageLength": 2000,
        "MaxTokensPerRequest": 4000,
        "MaxRequestsPerUserPerMinute": 10,
        "MaxRequestsPerUserPerHour": 100
    }
}
